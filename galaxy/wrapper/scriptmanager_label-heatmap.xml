<tool id="scriptmanager_label-heatmap" name="ScriptManager: Label Heatmap" version="0.0.1">
    <description>Create an SVG label for heatmap inputs</description>
    <requirements>
        <requirement type="package" version="11.0.11">openjdk</requirement>
    </requirements>
    <command>
        <![CDATA[
            java -jar  $__tool_directory__/scriptmanager_heatmap_add_label.jar
            -i "$input_img"
            -o "$output_img"
	    -w "$line_tickness"
            -t "$x_tickmark_height"
	    -f "$font_size"
	    -l "$left_x_tickmark_label"
	    -m "$mid_x_tickmark_label"
	    -r "$right_x_tickmark_label"
	    -x "$x_axis_label"
	    -y "$y_axis_label"
]]>
    </command>
    <inputs>
        <param name="input_img" type="data" format="png" label=" input image in png format" />
        <param name="line_tickness" type="integer" value="2" label="Line tickness" />
        <param name="x_tickmark_height" type="integer" value="10" label="Height of X axis tickmarks" />
        <param name="font_size" type="integer" value="18" label="Font size" />
        <param name="left_x_tickmark_label" type="integer" value="-250" label="Label on the left most tickmark of the X axis" />
        <param name="mid_x_tickmark_label" type="integer" value="0" label="Label on the midpoint tickmark of the X axis" />
        <param name="right_x_tickmark_label" type="integer" value="250" label="Label on the right most tickmark of the X axis" />
        <param name="x_axis_label" type="text" value="Distance from the center of the motif" label="X axis label" />
        <param name="y_axis_label" type="text" value="Occupancy level" label="Y axis label" />
    </inputs>

    <outputs>
        <data name="output_img" type="data" format="svg"  label="${tool.name} on ${on_string}"/>
    </outputs>
    <tests>
    </tests>
    <help>
**What it does**

This tool adds annotation to the heatmap plot generated by script manager
    </help>

</tool>
